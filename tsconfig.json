{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}